<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgbtn_georgia"
        android:layout_width="@dimen/flag_diam"
        android:layout_height="@dimen/flag_diam"
        android:layout_marginStart="56dp"
        android:layout_marginTop="@dimen/margin_flag_top"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/georgia" />

    <ImageButton
        android:id="@+id/imgbtn_uk"
        android:layout_width="@dimen/flag_diam"
        android:layout_height="@dimen/flag_diam"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_jamaica"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_georgia"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_georgia"
        app:srcCompat="@drawable/uk" />

    <ImageButton
        android:id="@+id/imgbtn_jamaica"
        android:layout_width="@dimen/flag_diam"
        android:layout_height="@dimen/flag_diam"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_uk"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_uk"
        app:srcCompat="@drawable/jamaica" />

</androidx.constraintlayout.widget.ConstraintLayout>